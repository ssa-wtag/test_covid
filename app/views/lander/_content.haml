%a{name: 'contact'}
.banner
  .container
    .row
      .col-lg-6
        %h2
          See what's Happening Home and Abroad
      .col-lg-6
        %ul.list-inline.banner-social-buttons
          %li
            = link_to 'https://corona.gov.bd/', class: 'btn btn-default btn-lg', target: :_blank do
              %span.network-name
                Live Statistics
            %li
              = link_to 'https://iedcr.gov.bd/', class: 'btn btn-default btn-lg', target: :_blank do
                %span.network-name
                  IEDCR
            %li
              = link_to 'https://www.worldometers.info/coronavirus/', class: 'btn btn-default btn-lg', target: :_blank do
                %span.network-name
                  World Statistics
