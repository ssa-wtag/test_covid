<script type="text/javascript" src="/javascripts/lib/plasma_donor.js"></script>

<div class="dashboard">
  <% flash.each do |key, value| %>
    <div class="alert">
      <%= value %>
    </div>
  <% end %>
  <div id="flash-box">
    <div></div>
  </div>
</div>

<div class="btn btn-danger">
  <div class="back">
    <%= link_to 'Back', appointment_index_path %>
  </div>
</div>

<div class="create-appointment create-appointment-confirm">
  <h3 class="title is-4"><%= 'All Donors' %></h3>

  <table id="plasma-donor-table" class="table sort-data">
    <thead>
    <tr class="table-header">
      <th><%= 'Serial' %></th>
      <th><%= 'Name' %></th>
      <th><%= 'Address' %></th>
      <th><%= 'Mobile' %></th>
      <th><%= 'Email' %></th>
    </tr>
    </thead>
    <tbody>
    <% @plasma_donors.each do |appointment| %>
      <tr class="table-bordered">
        <td class="row-expand"><%= appointment.serial%></td>
        <td class="row-expand"><%= appointment.name%></td>
        <td class="row-expand"><%= appointment.address %></td>
        <td class="row-expand"><%= appointment.mobile %></td>
        <td class="row-expand"><%= appointment.email %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
